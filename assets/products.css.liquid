.cmp-products {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    margin: 60px 0 0;
    padding: 25px;
    background-color: var(--secondary-color);
    color: var(--white-100);
    border-radius: 20px;
}

.cmp-products__column {
    display: flex;
    flex-direction: column;
    flex-basis: 45%;
    width: 100%;
    padding: 20px;
}

.cmp-products__main-img {
    max-width: 700px;
    box-shadow: 0 4px 5px var(--tertiary-color);
}

.cmp-products__main-img,
.cmp-products__small-img-container,
.cmp-products__small-img {
    border-radius: 15px;
}

.cmp-products__small-img-container {
    margin: 20px 0;
    padding: 10px;
    background-color: var(--white-200);
}

.cmp-products__inputs-row {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
}

.cmp-products__inputs-column {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.cmp-products__price-text {
    position: relative;
    font-size: 2rem;
    font-weight: 800;
}

.cmp-products__price-spinner {
    z-index: -1;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    /* twelve-sided-star.svg with a --primary-color fill color */
    content: url('data:image/svg+xml;base64,');
    width: 8rem;
    height: 8rem;
    animation: spin-ani 20s infinite linear;
}

.cmp-products__price-text,
.cmp-products__form-label {
    color: var(--white-100);
    z-index: 0;
}

.cmp-products__form-label {
    text-align: right;
    font-size: 1.1rem;
}

.cmp-products__form-input,
.cmp-products__form-select,
.cmp-products__form-btn {
    margin: 10px;
    padding: 20px;
    border: 0;
    border-radius: 15px;
    font-size: 1.1rem;
}

.cmp-products__form-input--number {
    max-width: 2.5rem;
}

.cmp-products__form-btn {
    color: var(--white-100);
    background-color: var(--green-200);
}

/* Mobile Styling */
@media only screen and (max-width: 568px) {
    .cmp-products {
        margin: 60px 5px 0;
    }

    .cmp-products__column {
        flex-basis: 90%;
    }

    .cmp-products__column:not(:first-child) {
        border-top: 1px solid var(--tertiary-color);
        padding: 30px 20px 20px;
    }

    .cmp-products__small-img {
        max-width: 75px;
    }

    .cmp-products__price-text {
        font-size: 1.5rem;
    }

    .cmp-products__price-spinner {
        width: 6rem;
        height: 6rem;
    }

    .cmp-products__form-input,
    .cmp-products__form-select,
    .cmp-products__form-btn {
        margin: 8px;
        padding: 15px;
        font-size: 1rem;
    }
}
