@font-face {
   font-family: "Go Regular";
   src: url({{ "Go Regular.woff2" | asset_url }}) format("woff2");
   font-style: normal;
}

@keyframes spin-ani {
   0% { transform-box: fill-box; transform-origin: center; transform: translate(-50%,-50%) rotate(0deg); }
   100% { transform-box: fill-box; transform-origin: center; transform: translate(-50%,-50%) rotate(360deg); }
}

:root {
   --primary-font: "Go Regular";

   --desktop-tablet-max-width: 1270px;

   --primary-color: rgba(247,92,47,255);
   --secondary-color: rgba(251,150,110,255);
   --tertiary-color: rgba(148,122,109,255);
   --white-100: rgba(255,240,230,255);
   --white-200: rgba(254,220,206,255);
}

body {
   font-family: var(--primary-font);
   background-color: var(--white-100);
   -webkit-font-smoothing: antialiased;
}

main {
   text-align: center;
   margin: 60px auto 0;
}

footer {
   margin: 30px 0 0;
   background-color: var(--secondary-color);
   height: 100%;
}

.cmp-nav-gradient {
   position: fixed;
   top: 35px;
   left: 0;
   right: 0;
   width: 100%;
   height: 20px;
   background: linear-gradient(180deg, var(--tertiary-color), rgba(0,0,0,0));
}

.cmp-nav__spinner:hover,
.cmp-nav__spinner:focus {
   fill: var(--white-100);
}

.cmp-nav {
   position: fixed;
   top: 0;
   left: 0;
   right: 0;
   background-color: var(--primary-color);
}

.cmp-nav__container {
   display: flex;
   justify-content: space-between;
   align-items: center;
}

body,
.cmp-nav__container--centered,
.cmp-site-banner--centered,
.cmp-footer__container--centered {
   text-align: center;
   margin: auto;
}

.cmp-nav__container--max-width,
.cmp-site-banner--centered,
.cmp-products-container--max-width,
main,
.cmp-footer__container--max-width {
   max-width: var(--desktop-tablet-max-width);
}

.cmp-nav__site-nav-container,
.cmp-nav__account-nav-container {
   display: flex;
   flex-direction: column;
}

.cmp-nav__site-nav,
.cmp-nav__account-nav {
   display: flex;
}

.cmp-nav__container a {
   display: inline-flex;
   flex-direction: column;
   position: relative;
   color: var(--white-100);
   font-size: 1.1rem;
   font-weight: 300;
   text-decoration: none;
   padding: 10px;
   text-align: center;
   transition: all 0.2s ease;
}

.cmp-nav__container a:hover,
.cmp-nav__container a:focus {
   color: var(--primary-color);
   background-color: var(--white-100);
   fill: var(--white-100) !important;
   transition: all 0.2s ease;
}

.cmp-nav__nav-link--selected {
   color: var(--primary-color) !important;
   background-color: var(--white-200);
   fill: var(--white-200) !important;
   font-weight: 700 !important;
}

.cmp-nav__spinner {
   z-index: -1;
   position: absolute;
   top: 75%;
   left: 50%;
   transform: translate(-50%, -50%);
   /* twelve-sided-star.svg with a --white-200 fill color */
   content: url('data:image/svg+xml;base64,');
   width: 130%;
   height: 130%;
   transform-box: fill-box;
   transform-origin: center;
   animation: spin-ani 6s infinite linear;
   transition: all 0.2s ease;
}

.cmp-nav__container a:hover .cmp-nav__spinner,
.cmp-nav__container a:focus .cmp-nav__spinner {
   animation-duration: 3s;
   /* twelve-sided-star.svg with a --white-100 fill color */
   content: url('data:image/svg+xml;base64,');
}

.cmp-site-banner__title-container {
   display: flex;
   width: 100%;
   height: 225px;
   justify-content: center;
   align-items: center;
   background: linear-gradient(65deg, var(--secondary-color), var(--tertiary-color));
}

.cmp-site-banner__title-column {
   display: flex;
   flex-direction: column;
}

.cmp-site-banner__title-text {
   color: var(--white-100);
   font-size: 2.5rem;
   font-weight: 300;
}

.cmp-products-container {
   display: flex;
   flex-wrap: wrap;
   justify-content: center;
   align-items: center;
   gap: 20px;
   margin: 0 10px 10px;
}

.cmp-product {
   flex: 0 1 24%;
   background-color: var(--secondary-color);
   box-shadow: 0 2px 5px var(--tertiary-color);
   border-radius: 10px;
   padding: 30px;
   text-decoration: none;
   transition: all 0.3s ease;
}

.cmp-product:hover,
.cmp-product:focus {
   flex: 0 1 25%;
   transition: all 0.3s ease;
}

.cmp-product__row {
   display: flex;
   justify-content: space-between;
   align-items: baseline;
}

.cmp-product__row--margin-top-10 {
   margin-top: 10px;
}

.cmp-product__column {
   display: flex;
   flex-direction: column;
}

.cmp-product h4 {
   margin: 0;
   padding: 10px 0;
   font-size: 1.3rem;
   font-weight: 800;
}

.cmp-product h4,
.cmp-product p {
   color: var(--white-100);
}

.cmp-product img {
   width: 100%;
   border-radius: 10px;
}

.cmp-footer__container {
   padding: 40px 5px 80px;
}

.cmp-footer__links-row {
   display: flex;
   justify-content: center;
   align-items: center;
   gap: 10px;
}

.cmp-footer__links-column {
   display: flex;
   flex-direction: column;
}

.cmp-footer__link {
   font-size: 1.1rem;
   color: var(--white-100);
}

/* Mobile Styling */
@media only screen and (max-width: 568px) {
   .cmp-nav__container a {
      font-size: 0.8rem;
      font-weight: 400;
   }

   .cmp-nav__spinner:before {
      width: 50px;
      height: 50px;
   }

   .cmp-product {
      flex: 0 1 75%;
   }

   .cmp-product:hover,
   .cmp-product:focus {
      flex: 0 1 76%;
   }
}