@font-face {
   font-family: "Go Regular";
   src: url({{ "Go Regular.woff2" | asset_url }}) format("woff2");
   font-style: normal;
}

@keyframes spin-ani {
   0% { transform: rotate(0deg); }
   100% { transform: rotate(360deg); }
}

:root {
   --primary-font: "Go Regular";

   --desktop-tablet-max-width: 1270px;
   --mobile-width: 568px;

   --primary-color: rgba(247,92,47,255);
   --secondary-color: rgba(251,150,110,255);
   --tertiary-color: rgba(148,122,109,255);
   --white: rgba(255,240,230,255);
 }

body {
   font-family: var(--primary-font);
   background-color: var(--white);
   -webkit-font-smoothing: antialiased;
}

.cmp-nav-gradient {
   position: fixed;
   top: 35px;
   left: 0;
   right: 0;
   width: 100%;
   height: 20px;
   background: linear-gradient(180deg, var(--tertiary-color), rgba(0,0,0,0));
}

.cmp-nav__spinner:hover,
.cmp-nav__spinner:focus {
   fill: var(--white);
}

.cmp-nav {
   position: fixed;
   top: 0;
   left: 0;
   right: 0;
   background-color: var(--primary-color);
}

.cmp-nav__container {
   display: flex;
   justify-content: space-between;
   align-items: center;
}

body,
.cmp-nav__container--centered,
.cmp-site-banner--centered,
main {
   text-align: center;
   margin: auto;
}

.cmp-nav__container--max-width,
.cmp-site-banner--centered,
.cmp-products-container--max-width,
main {
   max-width: var(--desktop-tablet-max-width);
}

.cmp-nav__site-nav-container,
.cmp-nav__account-nav-container {
   display: flex;
   flex-direction: column;
}

.cmp-nav__site-nav,
.cmp-nav__account-nav {
   display: flex;
}

.cmp-nav__container a {
   display: inline-flex;
   flex-direction: column;
   position: relative;
   color: var(--white);
   font-size: 1.1rem;
   text-decoration: none;
   padding: 10px;
   text-align: center;
   transition: all 0.3s ease;
}

.cmp-nav__spinner:before {
   z-index: -1;
   position: absolute;
   top: -30px;
   right: -10px;
   content: url('data:image/svg+xml;base64,');
   width: 90px;
   height: 90px;
   transform-box: fill-box;
   transform-origin: center;
   animation: spin-ani 6s infinite linear;
   transition: all 0.3s ease;
}

.cmp-nav__spinner:before svg path {
   fill: var(--primary-color) !important;
}

.cmp-nav__spinner:before svg:hover {
   fill: var(--white) !important;
}

.cmp-nav__container a:hover,
.cmp-nav__container a:focus {
   color: var(--primary-color);
   background-color: var(--white);
   transition: all 0.3s ease;
}

.cmp-site-banner__title-container {
   display: flex;
   width: 100%;
   height: 225px;
   justify-content: center;
   align-items: center;
   background: linear-gradient(65deg, var(--secondary-color), var(--tertiary-color));
}

.cmp-site-banner__title-column {
   display: flex;
   flex-direction: column;
}

.cmp-site-banner__title-text {
   color: var(--white);
   font-size: 2.5rem;
   font-weight: 300;
}

.cmp-products-container {
   display: flex;
   flex-wrap: wrap;
   justify-content: center;
   align-items: center;
   gap: 20px;
   margin: 20px 10px 10px;
}

.cmp-product {
   flex: 0 1 38%;
   background-color: var(--secondary-color);
   box-shadow: 0 2px 5px var(--tertiary-color);
   border-radius: 10px;
   padding: 30px;
   text-decoration: none;
   transition: all 0.3s ease;
}

.cmp-product:hover,
.cmp-product:focus {
   transform: scale(1.01);
   transition: all 0.3s ease;
}

.cmp-product h4 {
   margin: 0;
   padding: 10px 0;
   font-size: 1.3rem;
   font-weight: 800;
}

.cmp-product h4,
.cmp-product p {
   color: var(--white);
}

.cmp-product img {
   width: 100%;
   border-radius: 10px;
}

@media only screen and (max-width: var(--mobile-width)) {
   .cmp-nav__container a {
      font-size: 0.8rem;
      font-weight: 400;
   }
}