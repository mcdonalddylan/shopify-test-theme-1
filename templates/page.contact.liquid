<section class="cmp-contact">
  <div class="cmp-contact__page-banner">
    <h1 class="cmp-contact__page-title">{{ page.title }}</h1>
  </div>
  {% form 'contact' %}
    {% if form.posted_successfully? %}
      <h1 class="cmp-contact__success-text">Thank you for your contact! :D</h1>
    {% endif %}
    <div class="cmp-contact__errors-container">
      {{ form.errors | default_errors }}
    </div>
    <div class="cmp-contact__form-field-row">
      <div class="cmp-contact__form-field-column">
        <label class="cmp-contact__form-field-label" for="ContactFormName">Name</label>
        <input class="cmp-contact__form-field-input" type="text" id="ContactFormName" name="contact[name]">
      </div>
    </div>
    <div class="cmp-contact__form-field-row">
      <div class="cmp-contact__form-field-column">
        <label class="cmp-contact__form-field-label" for="ContactFormEmail">Email</label>
        <input class="cmp-contact__form-field-input" type="email" id="ContactFormEmail" name="contact[email]">
      </div>
    </div>
    <div class="cmp-contact__form-field-row">
      <div class="cmp-contact__form-field-column">
        <label class="cmp-contact__form-field-label" for="ContactFormPhone">Phone</label>
        <input class="cmp-contact__form-field-input" type="tel" id="ContactFormPhone" name="contact[phone]">
      </div>
    </div>
    <div class="cmp-contact__form-field-row">
      <div class="cmp-contact__form-field-column">
        <label class="cmp-contact__form-field-label" for="ContactFormMessage">Message</label>
        <textarea class="cmp-contact__form-field-textarea" rows="10" id="ContactFormMessage" name="contact[body]"></textarea>
      </div>
    </div>
    <div class="cmp-contact__form-button-row">
      <div class="cmp-contact__form-button-column">
        <input class="cmp-contact__form-field-btn" type="submit" value="Send">
      </div>
    </div>
  {% endform %}
</section>
